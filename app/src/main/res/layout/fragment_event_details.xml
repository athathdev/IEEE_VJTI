<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vjti.ieee.ieee_vjti.Fragments.EventDetailsFragment">

    <TextView
        android:id="@+id/event_fragment_date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="IEEE event"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <ImageView
                android:id="@+id/event_fragment_image"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Description"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/event_fragment_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="discription"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="prize"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_fragment_prize"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:gravity="center_horizontal"
                android:text="amount prize"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="ps:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_fragment_ps"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:gravity="center_horizontal"
                android:text="ps"
                android:textSize="20sp" />

            <Button
                android:id="@+id/event_fragment_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="REGISTER" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="venue:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_fragment_venue"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:gravity="center_horizontal"
                android:text="ps"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
